    <label for="input-customerID">Customer ID: </label>
    <select name="input-customerID" id="mySelect">
        <option value="test">Select an ID</option>
        {{#each data}}
        <option value="{{this.customerID}}">{{this.customerID}}</option>
        {{/each}}
    </select>

    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="update-name">

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="update-email" size="40" aria-required="true" maxlength="100" required
        pattern="[^ @]+@[^ @]+.[a-z]+" placeholder="name@host.com">

    <input type="submit">
    </fieldset>

</form>

