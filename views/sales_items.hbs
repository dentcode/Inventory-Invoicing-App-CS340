<!-- Sales_items.hbs -->
<h1>Sales Items</h1>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
{{!-- Create a table --}}
<table id="sales-item-table" border="1" cellpadding="5">

    {{!-- Header section --}}
     <thead>
                    <tr>
                        {{#each data.[0]}}
                        <th>
                            {{@key}}
                        </th>
                        {{/each}}
                        <th>Delete</th>
                    </tr>
                </tr>
            </thead>

        </thead>

                 {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print each attributes --}}
        {{#each data}}
         <tr data-value={{this.salesItemID}}>
            <td>{{this.salesItemID}}</td>
            <td>{{this.salesID}}</td>
            <td>{{this.menuItemID}}</td>
            <td>{{this.orderQuantity}}</td>
            <td>{{this.unitPrice}}</td>
            <td><button onclick="deleteSalesItem({{this.salesItemID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
            </table>
            <script src="./js/delete_sales_item.js"></script>

<!-- /views/index.hbs -->

{{!-- Form to add a record to the table --}}
<h2>Add a Sales Item</h2>
<p>To add a new item to a sale, please enter their information below and click 'Submit'!</p>
<form id="add-sales-item-form-ajax">
    <fieldset>
    <label for="input-salesID">Sales ID: </label>
    <input type="number" name="input-salesID" id="input-salesID">
        

    <label for="input-menuItemID">Menu Item ID: </label>
    <input type="number" name="input-menuitemID" id="input-menuItemID">
       

    <label for="input-orderQuantity">Quantity: </label>
    <input type="number" name="input-orderQuantity" id="input-orderQuantity" min="0">

    <label for="input-unitPrice">Unit Price: </label>
    <input type="decimal" name="input-unitPrice" id="input-unitPrice">

    <input type="submit">
    </fieldset>
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_salesItem.js"></script>