    <label for="input-menuItemID">Menu Item ID: </label>
    <select name="input-menuItemID" id="mySelect">
        <option value="test">Select an ID</option>
        {{#each data}}
        <option value="{{this.menuItemID}}">{{this.menuItemID}}</option>
        {{/each}}
    </select>
    <p>
    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="update-name">
