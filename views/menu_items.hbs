<!-- menu_items.hbs -->
        <h1> Menu Items</h1>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <main>
        <section>
            <table id="menuItem-table"  border="1" cellpadding="5">
                <thead>
                    <tr>
                        {{#each data.[0]}}
                        <th>
                            {{@key}}
                        </th>
                        {{/each}}
                        <th>Delete</th>
                    </tr>
                </thead>

                 {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, name, email --}}
        {{#each data}}
         <tr data-value={{this.menuItemID}}>
            <td>{{this.menuItemID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.listedPrice}}</td>
            <td>{{this.menuItemQuanity}}</td>
            <td><button onclick="deleteMenuItem({{this.menuItemID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
            </table>
            <script src="./js/delete_menuItem.js"></script>

            
            <p>&nbsp;</p>
                <form id="add-menuItem-form-ajax">
                    <fieldset>
                    <legend> Add Menu Item</legend>
                    <p> Fill in item information</p>

                    <p>
                    <label for="input-name">Name: </label>
                    <input type="text" name="input-name" id="input-name">
                    </p>

                    <p>
                    <label for="listedPrice">Price: </label>
                    <input type="decimal" name="input-price" id="input-price">
                    </p>

                    <p>
                    <label for="input-quanity">Quanity: </label>
                    <input type="text" name="input-quanity" id="input-quanity">
                    </p>
                    
                    <input type="submit">
                    </fieldset>
                </form>
                {{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
                <script src="./js/add_menuItem.js"></script> 


        {{!-- Form to update a record in the table --}}
<p>&nbsp;</p>
