<!-- sales.hbs -->
        <h1> Sales</h1>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <main>
        <section>
            <table id="sales-table"  border="1" cellpadding="5">
                <thead>
                    <tr>
                        {{#each data.[0]}}
                        <th>
                            {{@key}}
                        </th>
                        {{/each}}
                        <th>Delete</th>
                    </tr>
                </thead>

                 {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print each attributes --}}
        {{#each data}}
         <tr data-value={{this.salesID}}>
            <td>{{this.salesID}}</td>
            <td>{{this.customerID}}</td>
            <td>{{this.date}}</td>
            <td>{{this.total}}</td>
            <td><button onclick="deleteSales({{this.salesID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
            </table>
            <script src="./js/delete_sales.js"></script>

            
            <p>&nbsp;</p>
                <form id="add-sales-form-ajax">
                    <fieldset>
                    <legend> Add Sale</legend>
                    <p> Fill in Sale information</p>
                    <label for="input-cID"> Customer ID</label>
                    <input type="text" name="input-cID" id="input-cID" size="30">

                    <p>
                    <label for="input-sdate"> Date</label>
                    <input type="date" name="saleDate" id="input-sdate" size="20" aria-required="true"
                     placeholder="dd-mm-yyyy" value="" min="1997-01-01" max="2030-12-31" />
                    </p>

                    <p>
                    <label for="input-stotal"> Total</label>
                    <input type="decimal" name="input-saleTotal", placeholder="0.00" id="input-stotal" size="10">
                    </p>

                    <input type="submit">
                    </fieldset>
                </form>
                {{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
                <script src="./js/add_sales.js"></script> 


