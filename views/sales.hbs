<p>&nbsp;</p>
<form id="update-sales-form-ajax">
    <fieldset>
    <legend> Update Sale information</legend>
    <p>To update a specific sale, select the sale's ID and customer's ID
        from the drop-down menu on the left and update the information</p>
    <label for="input-salesID">Sales ID: </label>
    <select name="input-salesID" id="mySelect">
        <option value="test">Select an ID</option>
        {{#each data}}
        <option value="{{this.salesID}}">{{this.salesID}}</option>
        {{/each}}
    </select>

    <label for="input-customerID">Customer ID: </label>
    <select name="input-customerID" id="update-customer">
        <option value="customerSelect">Select an ID</option>
        {{#each data}}
        <option value="{{this.customerID}}">{{this.customerID}}</option>
        {{/each}}
    </select>

    <p>
    <label for="update-date"> Date</label>
    <input type="date" name="saleDate" id="update-date" size="20" aria-required="true"
        placeholder="dd-mm-yyyy" value="" min="1997-01-01" max="2030-12-31" />
    </p>

    <p>
    <label for="update-total"> Total</label>
    <input type="decimal" name="saleTotal" placeholder="0.00" id="update-total" size="10">
    </p>
    <input type="submit">
    </fieldset>

</form>

<script src="./js/update_sales.js"></script>

        </section>
